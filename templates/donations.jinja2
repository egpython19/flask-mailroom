{% extends 'base.jinja2' %}

{% block subtitle %}Donations{% endblock subtitle %}

{% block content %}

<div class ="card-columns">
    {% for donation in donations %}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ donation.donor.name }}'s Donation</h5>
            <p class="card-text">Value: ${{ donation.value }}</p>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock content %}
